<div class="container my-3" style="max-width: 500px;">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">カウントの保存</h2>

      <%= form_with model: @counter, url: counter_path(@counter), method: :patch, local: true do |f| %>
        <%= f.hidden_field :update_source, value: "new" %>
        <div class="mb-3">
          <%= f.label :eaten_at, "日付" %>
          <%= f.date_field :eaten_at, class: "form-control" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :store_name, "店名(任意)" %>
          <%= f.text_field :store_name, class: "form-control" %>
        </div>

        <p>以下の寿司をカウントしました：</p>
        <ul>
          <% @counter.sushi_item_counters.includes(:sushi_item).each do |sic| %>
            <li><%= sic.sushi_item.name %>: <%= sic.count %> 貫</li>
          <% end %>
        </ul>

        <% sum = 0 %>
        <% @counter.sushi_item_counters.each do |sic| %>
          <% sum += sic.count %>
        <% end %>
        <p>合計<%= sum %>貫<p>

        <div class="d-grid">
          <%= f.submit "保存", class: "btn btn-navy" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="text-end">
  <%= link_to "カウント画面に戻る", sushi_items_path, class: "btn btn-navy" %>
</div>