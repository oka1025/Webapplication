<div class="flash-overlay position-fixed top-0 start-50 translate-middle-x mt-1 z-1050" style="min-width: 300px;">
  <% flash.each do |key, message| %>
    <div class="alert alert-<%= key == "notice" ? "success" : "danger" %> flash-message">
      <%= message %>
    </div>
  <% end %>
</div>
