<header>
  <nav class="navbar navbar-dark bg-dark">
    <!-- ハンバーガーボタン -->
    <div class="container-fluid">
      <button class="btn btn-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="mx-auto">
        <%= link_to '寿司カウンター', root_path, class: 'navbar-brand text-center' %>
      </div>
      <div>
        <% if user_signed_in? %>
          <%= link_to 'ログアウト', destroy_user_session_path, class: 'bi bi-box-arrow-right nav-link text-white', data: { turbo_method: :delete } %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: 'text-white' %>
          <%= link_to "新規登録", new_user_registration_path, class: 'text-white' %>
        <% end %>
      </div>
    </div>
  </nav>
</header>

<!-- オフキャンバスサイドバー -->
<div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
  <div class="offcanvas-header">
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <ul class="nav flex-column">
      <h5 class="offcanvas-title" id="offcanvasSidebarLabel">メインメニュー</h5>
      <li class="nav-item mb-2">
        <%= link_to 'ホーム', root_path, class: 'nav-link text-white' %>
      </li>
      <li class="nav-item mb-2">
        <%= link_to 'カウンター', "#", class: 'nav-link text-white' %>
      </li>
      <li class="nav-item mb-2">
        <%= link_to 'カウント履歴', "#", class: 'nav-link text-white' %>
      </li>
      <li class="nav-item mb-2">
        <%= link_to 'データベース', "#", class: 'nav-link text-white' %>
      </li>
      <li class="nav-item mb-2">
        <%= link_to 'ガチャ', "#", class: 'nav-link text-white' %>
      </li>
      <br>
      <h5 class="offcanvas-title" id="offcanvasSidebarLabel">ユーザーメニュー</h5>
      <li class="nav-item mb-2">
        <% if user_signed_in? %>
          <%= link_to 'ログアウト', destroy_user_session_path, class: 'nav-link text-white bi bi-box-arrow-right', data: { turbo_method: :delete } %>
        <% else %>
          <%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-white' %>
          <%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-white' %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
