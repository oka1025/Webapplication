<div class="container text-center my-2">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center bg-white border rounded-pill px-2 shadow-sm" style="min-width: 60px;">
      <%= image_tag("icons/coin.svg", size: "20x20", class: "me-1") %>
      <strong class="text-dark"><%= current_user.coin %></strong>
    </div>
    <div>
      ガチャ数 <%= current_user.user_gacha_lists.count %> 回
      収集率 <%= (GachaList.count > 0 ? (current_user.user_gacha_lists.distinct.count(:gacha_list_id).to_f / GachaList.count * 100).floor : 0) %>%
    </div>
  </div>

  <div class="gacha-machine mb-4">
    <%= image_tag "gachagacha.png", class: "img-fluid", style: "max-height: 310px;" %>
  </div>

  <div class="d-flex justify-content-center gap-4">
    <%= button_to draw_gachas_path(times: 1), method: :post, class: "gacha-button", data: { turbo: false } do %>
      <div class="gacha-button-top">1回プレイ</div>
      <div class="gacha-button-bottom">
        <%= image_tag("icons/coin.svg", size: "20x20", class: "me-1") %>×5
      </div>
    <% end %>
  
    <%= button_to draw_gachas_path(times: 10), method: :post, class: "gacha-button", data: { turbo: false } do %>
      <div class="gacha-button-top">
        <div>10回プレイ</div>
        <div class="text-smaller">(SR以上1回確定)</div>
      </div>
      <div class="gacha-button-bottom">
        <%= image_tag("icons/coin.svg", size: "20x20", class: "me-1") %>×50
      </div>
    <% end %>
  </div>
</div>
<div class="text-center">
  <%= link_to "獲得一覧", gachas_path, class: "btn btn-navy mt-4"%>
</div>


